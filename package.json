  "dependencies": {
    "@verida/account-node": "^1.1.8",
    "@verida/client-ts": "^1.1.12",
    "@verida/did-client": "^0.1.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "express-basic-auth": "git+https://github.com/Mozzler/express-basic-auth.git",
    "log4js": "^6.4.1",
